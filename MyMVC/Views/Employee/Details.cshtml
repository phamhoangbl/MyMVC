@using MyMVC.Models
@model MyMVC.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<h2>Employee Details</h2>
<table>
    <tr>
        <td><b>Id:</b></td>
        <td>@Model.EmployeeId</td>
    </tr>
    <tr>
        <td><b>Name:</b></td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td><b>Gender:</b></td>
        <td>@Model.Gender</td>
    </tr>
    <tr>
        <td><b>City:</b></td>
        <td>@Model.City</td>
    </tr>
</table>
<br/>
@Html.ActionLink("Back to List", "Index", "Employee", new { id = @Model.DepartmentId }, null);

